---
import Layout from '../layouts/Layout.astro';

const name = "Yueshan (Olivia) Zhang";

const emails = [
  { address: "yueshanzhanghappy@gmail.com", label: "Personal" },
  { address: "yueshanzhang@berkeley.edu", label: "Academic" }
];

const links = [
  { url: "https://github.com/Dejiu-Zhang", kind: "github", label: "GitHub" },
  { url: "https://www.linkedin.com/in/yueshan-zhang-804782392/", kind: "linkedin", label: "LinkedIn" },
  { url: "https://www.instagram.com/zhangdejiu9", kind: "instagram", label: "Instagram" },
  { url: "https://orcid.org/0009-0005-8737-0702", kind: "orcid", label: "ORCID" },
];
---

<Layout title={`Contact - ${name}`}>
  <div class="page-container">
    <header class="page-header">
      <h1>Contact</h1>
      <p class="intro">Email is best. I usually reply within 1–2 days.</p>
    </header>

    {/* 1. Email */}
    <section class="section emails">
      <h2>Email</h2>
      <div class="email-list">
        {emails.map((e) => (
          <div class="email-row">
            <a href={`mailto:${e.address}`} class="email-link">
              {e.address}
            </a>
            <span class="email-label">{e.label}</span>
          </div>
        ))}
      </div>
    </section>

    <hr class="divider" />

    {/* 2. Social Icons */}
    <section class="section socials">
      <h2>Online</h2>
      <div class="icons-row">
        {links.map((l) => (
          <a href={l.url} target="_blank" rel="noreferrer" class={`icon-link ${l.kind}`} aria-label={l.label}>
            {l.kind === "github" && (
              <svg class="icon" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
              </svg>
            )}
            {l.kind === "linkedin" && (
              <svg class="icon" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            )}
            {l.kind === "instagram" && (
              <svg class="icon" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path d="M7.5 2h9A5.5 5.5 0 0 1 22 7.5v9A5.5 5.5 0 0 1 16.5 22h-9A5.5 5.5 0 0 1 2 16.5v-9A5.5 5.5 0 0 1 7.5 2zm0 2A3.5 3.5 0 0 0 4 7.5v9A3.5 3.5 0 0 0 7.5 20h9a3.5 3.5 0 0 0 3.5-3.5v-9A3.5 3.5 0 0 0 16.5 4h-9zm10.75 1.75a.75.75 0 1 1 0 1.5.75.75 0 0 1 0-1.5zM12 7a5 5 0 1 1 0 10 5 5 0 0 1 0-10zm0 2a3 3 0 1 0 0 6 3 3 0 0 0 0-6z"/>
              </svg>
            )}
            {l.kind === "orcid" && (
              <svg class="icon" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path d="M12 0C5.372 0 0 5.372 0 12s5.372 12 12 12 12-5.372 12-12S18.628 0 12 0zM7.33 6.06c.6 0 1.087.487 1.087 1.087S7.93 8.234 7.33 8.234 6.243 7.747 6.243 7.147 6.73 6.06 7.33 6.06zm-.88 3.06h1.76v8.82H6.45V9.12zm4.05 0h1.35v1.2h.03c.37-.72 1.27-1.42 2.62-1.42 2.8 0 3.32 1.84 3.32 4.22v4.82h-1.76v-4.28c0-1.02-.02-2.33-1.42-2.33-1.42 0-1.64 1.11-1.64 2.26v4.35h-1.76V9.12z"/>
              </svg>
            )}
          </a>
        ))}
      </div>
    </section>
  </div>
</Layout>

<style>
  :root {
    --text-primary: #222;
    --text-secondary: #555;
    --text-muted: #777;
    --dark: #222;
  }

  /* 核心：强制所有元素无动画 */
  .page-header, h1, h2, p, a, svg, .divider, .email-row, .icons-row {
    animation: none !important;
    transform: none !important;
    opacity: 1 !important;
    transition: none !important;
  }

  /* 只有鼠标悬停时的简单变色可以保留 */
  a:hover, .icon-link:hover, .email-link:hover {
    transition: color 0.1s ease !important;
  }

  .page-container {
    max-width: 680px;
    margin: 1rem auto 5rem auto;
    padding: 0 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .page-header {
    text-align: center;
    margin-top: 0.5rem;
    margin-bottom: 2.5rem;
  }

  .page-header h1 {
    font-size: 3rem;
    margin: 0 0 0.5rem 0;
    font-weight: 900;
    color: var(--text-primary);
    letter-spacing: -0.05em;
  }

  .intro {
    color: var(--text-secondary);
    font-size: 1.1rem;
    margin: 0;
    font-family: serif;
    font-style: italic;
  }

  .section {
    width: 100%;
    text-align: center;
  }

  .section h2 {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--text-muted);
    margin-bottom: 1.2rem;
    font-weight: 800;
  }

  .divider {
    border: none;
    height: 2px;
    background: var(--dark);
    margin: 2.2rem auto;
    width: 80%;
    opacity: 0.12;
  }

  /* Email 样式 */
  .email-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }

  .email-row {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.8rem;
    flex-wrap: wrap;
  }

  .email-link {
    font-family: var(--font-mono, monospace);
    font-size: 1.1rem;
    color: var(--text-primary);
    text-decoration: none;
    border-bottom: 2px solid transparent;
    font-weight: 600;
  }

  .email-link:hover {
    border-bottom-color: var(--dark);
  }

  .email-label {
    font-size: 0.75rem;
    color: var(--text-primary);
    background: transparent;
    border: 2px solid var(--dark);
    padding: 0.2rem 0.5rem;
    border-radius: 6px;
    text-transform: uppercase;
    font-weight: 700;
  }

  /* 图标样式：整体放大 */
  .icons-row {
    display: flex;
    justify-content: center;
    gap: 1.8rem;
    margin-top: 0.2rem;
    flex-wrap: wrap;
  }

  .icon-link {
    color: var(--text-secondary);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 56px;
    height: 56px;
    text-decoration: none;
  }

  .icon-link:hover {
    color: black;
  }

  .icon {
    width: 36px;
    height: 36px;
    display: block;
  }

  @media (max-width: 520px) {
    .icon-link {
      width: 52px;
      height: 52px;
    }
    .icon {
      width: 34px;
      height: 34px;
    }
  }
</style>