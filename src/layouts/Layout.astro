---
const { title = "Yueshan Zhang - Research" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>

  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@0;1&family=Space+Mono:wght@400;700&family=Manrope:wght@400;500;600;700&display=swap"
    rel="stylesheet"
  />
</head>

<body>
  <nav class="navbar">
    <div class="nav-container">
      <a href="/" class="logo">Yueshan</a>

      <div class="nav-links" aria-label="Primary navigation">
        <a href="/">About</a>
        <a href="/research">Research</a>
        <a href="/resources">Resources</a>
        <a href="/contact">Contact</a>
      </div>
    </div>
  </nav>

  <main>
    <slot />
  </main>
</body>
</html>

<style is:global>
  :root {
    /* Dopamine Colors */
    --yellow: #FFE66D;
    --coral: #FF6B6B;
    --mint: #4ECDC4;
    --sky: #95E1D3;
    --purple: #C7B3E5;
    --cream: #FFF8E7;
    --dark: #2D3436;
    --gray: #636E72;

    /* Fonts */
    --font-display: "DM Serif Display", serif;
    --font-mono: "Space Mono", monospace;
    --font-body: "Manrope", sans-serif;
  }

  * { margin: 0; padding: 0; box-sizing: border-box; }

  html { scroll-behavior: smooth; }

  body {
    font-family: var(--font-body);
    background: var(--cream);
    color: var(--dark);
    line-height: 1.6;
    overflow-x: hidden;
  }

  img {
    max-width: 100%;
    height: auto;
    display: block;
  }

  /* Animated Background */
  body::before {
    content: "";
    position: fixed;
    top: -50%;
    right: -50%;
    width: 200%;
    height: 200%;
    background:
      radial-gradient(circle at 20% 80%, var(--mint) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, var(--coral) 0%, transparent 50%),
      radial-gradient(circle at 40% 40%, var(--yellow) 0%, transparent 50%);
    opacity: 0.15;
    z-index: -1;
    animation: float 20s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    33% { transform: translate(30px, -30px) rotate(5deg); }
    66% { transform: translate(-20px, 20px) rotate(-5deg); }
  }

  /* Navigation */
  .navbar {
    position: sticky;
    top: 0;
    background: rgba(255, 248, 231, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 3px solid var(--dark);
    z-index: 100;
    animation: slideDown 0.6s ease-out;
  }

  @keyframes slideDown {
    from { transform: translateY(-100%); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1.5rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  .logo {
    font-family: var(--font-display);
    font-size: 2rem;
    font-style: italic;
    color: var(--dark);
    text-decoration: none;
    position: relative;
    transition: transform 0.3s ease;
    flex: 0 0 auto;
  }

  .logo::after {
    content: "";
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 100%;
    height: 4px;
    background: var(--coral);
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.3s ease;
  }

  .logo:hover::after {
    transform: scaleX(1);
    transform-origin: left;
  }

  .logo:hover { transform: translateY(-2px); }

  .nav-links {
    display: flex;
    gap: 2.5rem;
    align-items: center;
    flex: 0 1 auto;
  }

  .nav-links a {
    font-family: var(--font-mono);
    font-size: 0.9rem;
    color: var(--dark);
    text-decoration: none;
    position: relative;
    font-weight: 700;
    transition: color 0.3s ease;
    white-space: nowrap;
  }

  .nav-links a::before {
    content: "";
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 100%;
    height: 3px;
    background: var(--mint);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .nav-links a:hover::before { transform: scaleX(1); }
  .nav-links a:hover { color: var(--mint); }

  /* Main Content */
  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2.5rem 2rem;
    min-height: calc(100vh - 120px);
  }

  /* Typography */
  h1 {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3.2rem);
    line-height: 1.2;
    margin-bottom: 0.6rem;
    animation: fadeInUp 0.8s ease-out 0.2s both;
  }

  h2 {
    font-family: var(--font-display);
    font-size: clamp(1.6rem, 3.5vw, 2.2rem);
    margin-bottom: 0.8rem;
    animation: fadeInUp 0.8s ease-out 0.3s both;
  }

  h3 {
    font-family: var(--font-body);
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  p {
    font-size: 1.1rem;
    color: var(--gray);
    max-width: 65ch;
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Accent Elements */
  .accent-dot {
    display: inline-block;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    margin: 0 4px;
    animation: bounce 2s ease-in-out infinite;
  }

  .accent-dot.yellow { background: var(--yellow); }
  .accent-dot.coral { background: var(--coral); animation-delay: 0.2s; }
  .accent-dot.mint { background: var(--mint); animation-delay: 0.4s; }
  .accent-dot.sky { background: var(--sky); animation-delay: 0.6s; }

  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .nav-container {
      flex-direction: column;
      align-items: flex-start;
      padding: 1.25rem 1.25rem;
      gap: 0.75rem;
    }

    .nav-links {
      width: 100%;
      flex-wrap: wrap;
      gap: 1rem 1.25rem;
    }

    .nav-links a {
      font-size: 0.85rem;
    }

    main {
      padding: 1.75rem 1.25rem;
    }

    p {
      font-size: 1rem;
    }
  }
</style>
